<%= form_for(@answer, :html => { :class => "form-horizontal", :role => "form" }) do |f| %>
  <% if @answer.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@answer.errors.count, "error") %> prohibited this answer from being saved:</h4>

      <ul>
      <% @answer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :body, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :body, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :insight, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :insight, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :image, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :question, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :question, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :interview, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :interview, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :user, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :user, :class => "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
